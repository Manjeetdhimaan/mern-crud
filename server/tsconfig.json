{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "**/*.ts",
        "migrations/**/*.js",
        "migrations/sqls/**/*.sql",
        "src/types/global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}